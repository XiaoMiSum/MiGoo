<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>xyz.migoo</groupId>
    <artifactId>MiGoo</artifactId>
    <packaging>pom</packaging>
    <version>1.6.0</version>
    <modules>
        <module>MiGoo-Runner</module>
        <module>MiGoo-Selenium</module>
        <module>MiGoo-Tools</module>
    </modules>

    <properties>
        <jdk.version>1.8</jdk.version>
        <poi.version>3.17</poi.version>
        <yaml.version>1.23</yaml.version>
        <junit.version>4.8</junit.version>
        <email.version>1.5</email.version>
        <dbutil.version>1.7</dbutil.version>
        <jedis.version>2.9.0</jedis.version>
        <jsoup.version>1.11.3</jsoup.version>
        <mysql.version>8.0.12</mysql.version>
        <slf4j.version>1.7.25</slf4j.version>
        <compile.version>3.5.1</compile.version>
        <ant-zip.version>1.10.5</ant-zip.version>
        <fastjson.version>1.2.54</fastjson.version>
        <http.client.version>4.5.6</http.client.version>
        <commons-lang3.version>3.5</commons-lang3.version>
        <commons-codec.version>1.11</commons-codec.version>
        <thymeleaf.version>3.0.9.RELEASE</thymeleaf.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
                <version>${compile.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
